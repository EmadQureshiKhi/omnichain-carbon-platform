{
  "name": "carbon-certificate-layerzero-solana",
  "version": "1.0.0",
  "description": "LayerZero V2 Solana programs for omnichain carbon certificates and credits",
  "main": "index.js",
  "scripts": {
    "build": "anchor build",
    "test": "anchor test",
    "deploy:localnet": "anchor deploy --provider.cluster localnet",
    "deploy:devnet": "anchor deploy --provider.cluster devnet",
    "deploy:mainnet": "anchor deploy --provider.cluster mainnet",
    "lint": "prettier --write .",
    "setup": "yarn install && anchor build",
    "start": "anchor localnet",
    "clean": "anchor clean",
    "keys:sync": "anchor keys sync",
    "keys:list": "anchor keys list",
    "install:layerzero": "npm install @layerzerolabs/lz-solana-sdk-v2"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.29.0",
    "@layerzerolabs/lz-solana-sdk-v2": "^2.3.44",
